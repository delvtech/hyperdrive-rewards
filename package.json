{
  "name": "hyperdrive-rewards",
  "version": "0.0.0",
  "description": "API server for Hyperdrive rewards",
  "main": "src/server.ts",
  "repository": "git@github.com:delvtech/hyperdrive-rewards.git",
  "author": "Matthew Brown <mattfdbrown@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "format:solidity": "npx prettier --write \"src/contracts/**/*.sol\""
  },
  "lint-staged": {
    "contracts/**/*.sol": "npx prettier --write",
    "test/**/*.sol": "npx prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@types/express": "^5.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "nodemon": "^3.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "5.4.5",
    "viem": "^2.21.54"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-solidity": "^1.4.1"
  }
}