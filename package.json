{
  "name": "hyperdrive-rewards",
  "version": "0.0.0",
  "description": "API server for Hyperdrive rewards",
  "main": "src/server.ts",
  "repository": "git@github.com:delvtech/hyperdrive-rewards.git",
  "author": "Matthew Brown <mattfdbrown@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist/src/server/index.js",
    "dev": "nodemon src/server/index.ts",
    "build": "./script/bash/buildServer.sh",
    "format:solidity": "npx prettier --write \"src/contracts/**/*.sol\"",
    "typeorm": "typeorm-ts-node-commonjs",
    "anvil:fork": "anvil --host 0.0.0.0 --port 8545 --fork-url https://eth-mainnet.g.alchemy.com/v2/YjUJYXT79LWtfH1bsgFmwDpCzc5-x21p --chain-id 1",
    "deploy:local": "forge script script/forge/DeployHyperdriveRewards.s.sol --rpc-url localhost:8545 --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 --broadcast",
    "save-events": "npx ts-node --require tsconfig-paths/register src/tasks/saveEvents.ts",
    "claim-rewards": "npx ts-node --require tsconfig-paths/register src/tasks/claimRewards.ts"
  },
  "lint-staged": {
    "contracts/**/*.sol": "npx prettier --write",
    "test/**/*.sol": "npx prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.3",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@nomicfoundation/hardhat-viem": "^2.0.6",
    "@types/express": "^5.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@wagmi/core": "1.4.13-cjs",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.5",
    "express": "^4.21.1",
    "hardhat": "^2.22.18",
    "http-proxy-middleware": "^3.0.3",
    "nodemon": "^3.1.7",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typeorm": "0.3.20",
    "typescript": "^5.7.3",
    "viem": "^2.21.54"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^22.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-solidity": "^1.4.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "4.5.2"
  }
}